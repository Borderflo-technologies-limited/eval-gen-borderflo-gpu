# Evaluation Agent Service Environment Variables
# Server Settings
HOST=0.0.0.0
PORT=8003
DEBUG=false

# Model Paths
FER_MODEL_PATH=./models/fer_model_from_images.h5
WHISPER_MODEL_SIZE=base

# Processing Settings
MAX_AUDIO_DURATION=600  # 10 minutes
SUPPORTED_AUDIO_FORMATS=wav,mp3,m4a
SUPPORTED_VIDEO_FORMATS=mp4,avi,mov

# CPU Server Communication
CPU_SERVER_URL=http://localhost:8000
API_KEY=your_evaluation_service_api_key_here

# LLM Settings (for content evaluation)
LLM_PROVIDER=groq
LLM_MODEL=llama-3.3-70b
LLM_API_KEY=your_groq_api_key_here

# Evaluation Settings
EMOTION_CONFIDENCE_THRESHOLD=0.7
SPEECH_RECOGNITION_CONFIDENCE_THRESHOLD=0.8

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/evaluation_agent.log

# Resource Limits
MAX_CONCURRENT_EVALUATIONS=3
GPU_MEMORY_LIMIT=0.6  # 60% of GPU memory
