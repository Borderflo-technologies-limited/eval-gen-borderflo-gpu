# Evaluation Agent Service Environment Variables

# Service Configuration
HOST=0.0.0.0
PORT=8002
DEBUG=false
LOG_LEVEL=INFO

# Model Configuration
FER_MODEL_PATH=models/fer_model_from_images.h5
WHISPER_MODEL_SIZE=base  # tiny, base, small, medium, large
DEVICE=cuda  # or cpu for local testing

# Groq LLM Configuration
GROQ_API_KEY=your-groq-api-key-here
GROQ_API_URL=https://api.groq.com/openai/v1/chat/completions
GROQ_MODEL=llama-3.3-70b-versatile

# Processing Configuration
MAX_FRAMES_FOR_EMOTION=30
MAX_VIDEO_DURATION=300  # 5 minutes
EMOTION_CONFIDENCE_THRESHOLD=0.6

# File Storage
TEMP_DIR=temp
MAX_FILE_SIZE=524288000  # 500MB in bytes

# Allowed File Types
ALLOWED_VIDEO_TYPES=["video/mp4", "video/avi", "video/mov", "video/webm"]
ALLOWED_AUDIO_TYPES=["audio/wav", "audio/mp3", "audio/mpeg", "audio/ogg"]

# Evaluation Scoring Weights
CONTENT_WEIGHT=0.4
RELEVANCE_WEIGHT=0.3
SPEECH_WEIGHT=0.2
EMOTION_WEIGHT=0.1

# Performance Thresholds
EXCELLENT_SCORE=8.5
GOOD_SCORE=7.0
AVERAGE_SCORE=5.5
POOR_SCORE=4.0

# Speech Analysis
OPTIMAL_WPM_MIN=120  # words per minute
OPTIMAL_WPM_MAX=180
MIN_RESPONSE_LENGTH=10  # minimum words

# Emotion Analysis
POSITIVE_EMOTIONS=["happy", "neutral", "surprise"]
NEGATIVE_EMOTIONS=["angry", "disgust", "fear", "sad"]

# Cleanup Configuration
AUTO_CLEANUP_HOURS=24
CLEANUP_INTERVAL_MINUTES=60

# GPU Configuration (for RunPod)
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=all

# RunPod Specific
RUNPOD_POD_ID=${RUNPOD_POD_ID}
RUNPOD_POD_NAME=${RUNPOD_POD_NAME}
RUNPOD_API_KEY=${RUNPOD_API_KEY} 